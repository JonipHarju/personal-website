---
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="transition-colors duration-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Joni Harju</title>
    <meta name="description" content="Personal website of Joni Harju" />

    <!-- Prevent flash of incorrect theme -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem("theme");
        const systemPrefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        const isDark = theme === "dark" || (!theme && systemPrefersDark);

        if (isDark) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
  </head>
  <body
    class="m-0 w-full h-full bg-background text-foreground transition-colors duration-200"
  >
    <slot />
  </body>
</html>

<style>
  html {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
