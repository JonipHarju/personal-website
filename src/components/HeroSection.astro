---
import content from "../../content.json";
---

<main
  class="relative min-h-screen flex items-center justify-center overflow-hidden"
>
  <div class="relative z-10 text-center px-4 font-heading">
    <h1 class="text-6xl md:text-8xl font-bold mb-4 text-balance">
      <span class="text-foreground">Joni</span>
      <span class="text-accent">Harju</span>
    </h1>
    <p
      class="text-xl md:text-3xl text-muted-foreground font-light tracking-wide"
    >
      Software Developer
    </p>

    <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="#about"
        class="px-6 py-3 bg-accent text-accent-foreground rounded-lg font-medium hover:opacity-90 transition-opacity"
      >
        About Me
      </a>
      <a
        href="#projects"
        class="px-6 py-3 border border-border text-foreground bg-background rounded-lg font-medium hover:bg-muted transition-colors"
      >
        View Projects
      </a>
    </div>
  </div>
</main>
