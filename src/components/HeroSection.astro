---
import content from "../../content.json";
---

<main
  id="home"
  class="relative min-h-screen flex items-center justify-center overflow-hidden"
>
  <div class="relative z-10 text-center px-4 font-heading max-w-6xl mx-auto">
    <h1
      class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-bold mb-4 text-balance animate-fadeIn"
      style="animation-delay: 50ms"
    >
      <span class="text-foreground">Joni</span>
      <span class="text-accent">Harju</span>
    </h1>
    <p
      class="text-lg md:text-2xl lg:text-3xl xl:text-4xl text-muted-foreground font-light tracking-wide animate-fadeIn"
      style="animation-delay: 150ms"
    >
      Software Developer
    </p>

    <div
      class="mt-8 flex flex-col sm:flex-row gap-4 justify-center animate-fadeIn"
      style="animation-delay: 200ms"
    >
      <button
        id="aboutButton"
        class="button.hero px-6 py-3 transition-all text-base bg-accent text-accent-foreground rounded-lg font-medium hover:opacity-90 duration-200 font-baseText"
      >
        About Me
      </button>
      <button
        id="projectsButton"
        class="button.hero px-6 py-3 text-base border border-border text-foreground bg-background rounded-lg font-medium hover:bg-muted font-baseText"
      >
        View Projects
      </button>
    </div>
  </div>
</main>

<script>
  const aboutButton = document.getElementById("aboutButton");
  const projectButton = document.getElementById("projectsButton");

  aboutButton?.addEventListener("click", () => {
    const element = document.getElementById("about");
    element?.scrollIntoView({ behavior: "smooth" });
  });

  projectButton?.addEventListener("click", () => {
    const element = document.getElementById("projects");
    element?.scrollIntoView({ behavior: "smooth" });
  });
</script>
