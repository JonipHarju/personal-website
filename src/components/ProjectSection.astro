---
import { Image } from "astro:assets";
import content from "../../content.json";
import { getProjectImage } from "../utils/getProjectImage";
import ContentDivider from "./ContentDivider.astro";
import type { ContentData, Project } from "../interfaces/index";

const typedContent = content as ContentData;
---

<section id="projects" class="py-20 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-20 bg-background">
      <h2
        class="projects-title-animate text-4xl md:text-5xl font-bold text-accent mb-6 font-heading"
      >
        {typedContent.projects.title}
      </h2>
      <p
        class="projects-subtitle-animate text-muted-foreground text-lg max-w-2xl mx-auto leading-relaxed font-baseText"
      >
        {typedContent.projects.subtitle}
      </p>
    </div>

    <!-- Professional Work Section -->
    {
      typedContent.projects.professionalWork.list.length > 0 && (
        <div class="mb-24">
          <ContentDivider name={typedContent.projects.professionalWork.title} />

          <div class="grid md:grid-cols-2 gap-14">
            {typedContent.projects.professionalWork.list.map(
              async (project: Project, index: number) => {
                const projectImage = await getProjectImage(project.image);
                return (
                  <div
                    class={`group project-animate project-delay-${index % 3}`}
                  >
                    <div class="bg-background/90 rounded-2xl border border-accent/20 hover:border-accent/30 overflow-hidden   duration-300 h-full">
                      <div class="relative aspect-video overflow-hidden">
                        <Image
                          src={projectImage}
                          alt={project.title}
                          class="w-full h-full object-cover"
                          loading="lazy"
                        />
                      </div>
                      <div class="p-6">
                        <h4 class="text-2xl font-bold text-accent mb-4 font-baseText">
                          {project.title}
                        </h4>

                        <p class="text-muted-foreground leading-relaxed mb-6">
                          {project.description}
                        </p>

                        <div class="mb-6">
                          <p class="text-lg lg:text-xl font-semibold text-accent mb-3">
                            Tech Stack
                          </p>
                          <div class="flex flex-wrap gap-2">
                            {project.technologies.map((tech: string) => (
                              <span class="px-3 py-1 bg-accent/10 text-muted-foreground rounded-full text-sm border border-border">
                                {tech}
                              </span>
                            ))}
                          </div>
                        </div>

                        <div class="flex gap-3">
                          {project.links.preview &&
                            project.links.preview !== "#" &&
                            project.links.preview !== "" && (
                              <a
                                href={project.links.preview}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-accent-foreground rounded-xl font-medium hover:opacity-90 transition-opacity duration-200  font-baseText"
                              >
                                <svg
                                  class="w-5 h-5"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width={2}
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                  />
                                </svg>
                                View Project
                              </a>
                            )}
                          {project.links.github &&
                            project.links.github !== "#" &&
                            project.links.github !== "" && (
                              <a
                                href={project.links.github}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-2 text-foreground hover:text-muted-foreground  text-sm font-medium border border-border-light px-4 py-3 rounded-xl hover:bg-muted font-baseText"
                              >
                                <svg
                                  class="w-4 h-4"
                                  fill="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                </svg>
                                Code
                              </a>
                            )}
                        </div>
                      </div>
                    </div>
                  </div>
                );
              }
            )}
          </div>
        </div>
      )
    }

    <!-- Personal Projects Section -->
    {
      typedContent.projects.personalProjects.list.length > 0 && (
        <div>
          <ContentDivider name={typedContent.projects.personalProjects.title} />

          <div class="grid md:grid-cols-2 gap-8">
            {typedContent.projects.personalProjects.list.map(
              async (project: Project, index: number) => {
                const projectImage = await getProjectImage(project.image);
                return (
                  <div
                    class={`group project-animate project-delay-${index % 3}`}
                  >
                    <div class="bg-background rounded-2xl border border-border-light overflow-hidden hover:border-border  duration-300">
                      <div class="relative aspect-video overflow-hidden">
                        <Image
                          src={projectImage}
                          alt={project.title}
                          class="w-full h-full object-cover"
                          loading="lazy"
                        />
                      </div>
                      <div class="p-6">
                        <h4 class="text-2xl font-bold text-accent mb-4 font-baseText">
                          {project.title}
                        </h4>

                        <p class="text-muted-foreground leading-relaxed mb-6 text-sm font-baseText">
                          {project.description}
                        </p>

                        <div class="mb-6">
                          <p class="text-sm font-semibold text-foreground mb-3 font-baseText">
                            Tech Stack
                          </p>
                          <div class="flex flex-wrap gap-2">
                            {project.technologies.map((tech: string) => (
                              <span class="px-3 py-1 bg-muted text-muted-foreground rounded-full text-sm border border-border font-baseText">
                                {tech}
                              </span>
                            ))}
                          </div>
                        </div>

                        <div class="flex gap-3">
                          {project.links.preview &&
                            project.links.preview !== "#" &&
                            project.links.preview !== "" && (
                              <a
                                href={project.links.preview}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-accent-foreground rounded-xl font-medium hover:opacity-90 transition-opacity duration-200  font-baseText"
                              >
                                <svg
                                  class="w-5 h-5"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width={2}
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                  />
                                </svg>
                                Demo
                              </a>
                            )}
                          {project.links.github &&
                            project.links.github !== "#" &&
                            project.links.github !== "" && (
                              <a
                                href={project.links.github}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-2 text-foreground hover:text-muted-foreground  text-sm font-medium border border-border-light px-4 py-3 rounded-xl hover:bg-muted font-baseText"
                              >
                                <svg
                                  class="w-4 h-4"
                                  fill="currentColor"
                                  viewBox="0 0 24 24"
                                >
                                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                </svg>
                                Code
                              </a>
                            )}
                        </div>
                      </div>
                    </div>
                  </div>
                );
              }
            )}
          </div>
        </div>
      )
    }
  </div>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
          }
        });
      },
      { threshold: 0.1 }
    );

    document
      .querySelectorAll(
        ".project-animate, .projects-title-animate, .projects-subtitle-animate, .content-divider-animate"
      )
      .forEach((el) => {
        observer.observe(el);
      });
  });
</script>
